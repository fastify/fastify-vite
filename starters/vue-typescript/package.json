{
  "name": "vue-typescript-starter",
  "private": true,
  "description": "TypeScript starter template for @fastify/vue",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts --dev",
    "start": "node dist/server.js",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "vite build",
    "build:server": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/vite": "^8.2.2",
    "@fastify/vue": "^1.1.3",
    "@unhead/vue": "^2.0.5",
    "fastify": "^5.7.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.1",
    "@types/node": "^22.13.17",
    "@vitejs/plugin-vue": "^6.0.3",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
