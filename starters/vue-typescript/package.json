{
  "name": "starter-vue-typescript",
  "description": "TypeScript starter template for @fastify/vue",
  "type": "module",
  "scripts": {
    "lint": "oxlint",
    "dev": "tsx src/server.ts --dev",
    "start": "node dist/server.js",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "vite build",
    "build:server": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/vite": "^8.2.0",
    "@fastify/vue": "^1.1.1",
    "@unhead/vue": "^2.0.5",
    "fastify": "^5.4.0",
    "html-rewriter-wasm": "^0.4.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.1",
    "@types/node": "^22.13.17",
    "@vitejs/plugin-vue": "^5.2.3",
    "oxlint": "^0.16.6",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  }
}